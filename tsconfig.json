{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "Node",
    "outDir": "dist",
    "sourceRoot": "src",
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src/**/*"],
}
